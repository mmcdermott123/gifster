<div id="log_in_wrapper">

    <div class="log_in_container" class="clearfix">
      <div class="log_in_left">
        <%= image_tag("Login logo.gif")%>
        <h2>Gifster</h2>
      </div>
      <div class="log_in_right">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <h2 class="log_in_logo">Log in</h2>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, placeholder: "Email" %>
          <%= f.input :password, required: false, placeholder: "Password" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in" %>
        </div>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
